<ProxyEndpoint name="endpoint1">

  <HTTPProxyConnection>
    <BasePath>/mcp-access-control</BasePath>
  </HTTPProxyConnection>

  <FaultRules/>
  <DefaultFaultRule name="default-fault-rule">
    <Step>
      <Name>AM-Inject-Proxy-Revision-Header</Name>
    </Step>
    <Step>
      <Name>AM-Diags</Name>
    </Step>
    <AlwaysEnforce>true</AlwaysEnforce>
  </DefaultFaultRule>

  <PreFlow name="PreFlow">
    <Response>
    </Response>
  </PreFlow>

  <PostFlow name="PostFlow">
    <Request/>
    <Response>
      <Step>
        <Name>AM-Inject-Proxy-Revision-Header</Name>
      </Step>
    </Response>
  </PostFlow>

  <PostClientFlow name="PostFlow">
    <Response>
    </Response>
  </PostClientFlow>

  <EventFlow content-type="text/event-stream" name='eventstream'>
    <Response>
        <Step>
          <Name>JS-Filter-Tools-Event</Name>
          <Condition>(accesscontrol.mcp_method = "tools/list") and
          NOT (verifyapikey.VerifyAPIKey-1.apiproduct.tools-allowlist = null) </Condition>
        </Step>
    </Response>
  </EventFlow>

  <Flows>

    <Flow name="mcp">
      <Request>
        <Step>
          <Condition>request.header.authorization = null</Condition>
          <Name>RF-Missing-Authz-Header</Name>
        </Step>

        <Step>
          <Name>VerifyJWT-1</Name>
        </Step>

        <Step>
          <Name>VerifyAPIKey-1</Name>
        </Step>

        <Step>
          <Name>AM-AccessControl-Variables</Name>
        </Step>

        <Step>
          <Name>EC-1</Name>
        </Step>

        <Step>
          <Condition>accesscontrol.result != "ALLOW"</Condition>
          <Name>RF-Access-Denied</Name>
        </Step>
      </Request>
      <Response>

        <Step>
          <Name>JS-Filter-Tools-Response</Name>
          <Condition>(accesscontrol.mcp_method = "tools/list") and
          NOT (verifyapikey.VerifyAPIKey-1.apiproduct.tools-allowlist = null) </Condition>
        </Step>

      </Response>
      <Condition>
        proxy.pathsuffix ~~ "/mcp/?" and
        (request.verb = "GET" OR request.verb = "POST")
      </Condition>
    </Flow>

  </Flows>

  <RouteRule name='rule1'>
    <TargetEndpoint>target1</TargetEndpoint>
  </RouteRule>

</ProxyEndpoint>
